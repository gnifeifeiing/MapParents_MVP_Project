<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item android:right="1dp" android:bottom="2dp">
                <shape>
                    <solid android:color="@color/btnPressBg"/>
                    <corners android:radius="25dp"/>
                </shape>
            </item>
        </layer-list>

    </item>
    <item>
        <layer-list>
            <item android:left="2dp" android:top="2dp">
                <shape>
                    <solid android:color="@color/btnShadowBg"/>
                    <corners android:radius="25dp"/>
                </shape>
            </item>
            <item  android:right="2dp" android:bottom="2dp">
                <shape>
                    <solid android:color="@color/btnNoPressBg"/>
                    <corners android:radius="25dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>