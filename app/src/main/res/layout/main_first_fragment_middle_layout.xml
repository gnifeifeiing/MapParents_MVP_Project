<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="163dp"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:layout_marginTop="185dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="15dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/mainFg_headPicIv"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@mipmap/ic_mine_icon" />

            <ImageView
                android:id="@+id/mainFg_isChangeIv"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignBottom="@id/mainFg_headPicIv"
                android:layout_alignRight="@id/mainFg_headPicIv"
                android:src="@mipmap/ic_qiehuan" />

            <TextView
                android:id="@+id/mainFg_nameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/mainFg_headPicIv"
                android:layout_marginLeft="13dp"
                android:layout_toRightOf="@id/mainFg_headPicIv"
                android:paddingTop="2dp"
                android:textColor="@color/text_3"
                android:textSize="@dimen/textSize_14" />

            <TextView
                android:id="@+id/mainFg_achiNameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/mainFg_nameTv"
                android:layout_marginLeft="9dp"
                android:layout_toRightOf="@id/mainFg_nameTv"
                android:textColor="@color/text_6"
                android:textSize="@dimen/textSize_12" />

            <TextView
                android:id="@+id/mainFg_schoolTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/mainFg_headPicIv"
                android:layout_below="@id/mainFg_nameTv"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="6dp"
                android:layout_toRightOf="@id/mainFg_headPicIv"
                android:textColor="@color/text_3"
                android:textSize="@dimen/textSize_10" />

            <TextView
                android:id="@+id/mainFg_classTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/mainFg_schoolTv"
                android:layout_below="@id/tv_msg"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/mainFg_schoolTv"
                android:textColor="@color/text_3"
                android:textSize="@dimen/textSize_10" />

            <ImageView
                android:id="@+id/mainFg_xunzhangIv"
                android:layout_width="13dp"
                android:layout_height="17dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="12dp"
                android:src="@mipmap/medal_home_icon" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mainFg_schoolTv"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="6dp"
                android:layout_toRightOf="@id/mainFg_headPicIv"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="综合星值"
                    android:textColor="@color/text_3"
                    android:textSize="@dimen/textSize_10" />

                <TextView
                    android:id="@+id/mainFg_scoreTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/primaryBg"
                    android:textSize="@dimen/textSize_10" />

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@id/mainFg_scoreTv"
                    android:src="@mipmap/ic_star_icon" />
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <RelativeLayout
                android:id="@+id/mainFg_growthHistoryRl"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#f8f8fa"
                android:gravity="center_vertical">

                <View
                    android:layout_width="3dp"
                    android:layout_height="match_parent"
                    android:background="@color/primaryBg" />

                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:text="我的成长"
                    android:textColor="@color/text_black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/tv1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="麦励校园一起陪伴 "
                        android:textColor="@color/text_9"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/mainFg_growDayTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_4bc975"
                        android:textSize="10sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 天"
                        android:textColor="@color/text_9"
                        android:textSize="10sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:text="本学期共评价 "
                        android:textColor="@color/text_9"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/mainFg_timesTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_4bc975"
                        android:textSize="10sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 次"
                        android:textColor="@color/text_9"
                        android:textSize="10sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="9dp"
                    android:layout_height="17dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="6dp"
                    android:src="@mipmap/right_arrow_green_icon" />

            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>