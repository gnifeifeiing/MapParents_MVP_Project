<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemStudentCards_rootCard"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="8dp"
    app:cardElevation="5dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:layout_width="match_parent"
    android:layout_height="140dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/itemStudentCards_nameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="学生名"
            android:layout_marginTop="22dp"
            android:layout_marginLeft="22dp"
            android:textColor="@color/text_3"
            android:textSize="@dimen/textSize_14" />

        <RelativeLayout
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp" >

            <ImageView
                android:id="@+id/itemStudentCards_headIv"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@mipmap/head" />
            <TextView
                android:layout_toRightOf="@id/itemStudentCards_headIv"
                android:layout_marginLeft="14dp"
                android:id="@+id/itemStudentCards_numTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="金水区"
                android:textColor="@color/text_3"
                android:textSize="@dimen/textSize_12" />
            <TextView
                android:id="@+id/itemStudentCards_schoolTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/itemStudentCards_headIv"
                android:layout_marginLeft="14dp"
                android:text="学校:"
                android:layout_marginTop="8dp"
                android:layout_below="@id/itemStudentCards_numTv"
                android:textColor="@color/text_3"
                android:textSize="@dimen/textSize_12" />

            <TextView
                android:id="@+id/itemStudentCards_schoolNameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/itemStudentCards_schoolTv"
                android:layout_toRightOf="@+id/itemStudentCards_schoolTv"
                android:text="市一中"
                android:textColor="@color/text_3"
                android:textSize="@dimen/textSize_12" />

            <TextView
                android:id="@+id/card_grade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/itemStudentCards_schoolTv"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/itemStudentCards_schoolNameTv"
                android:text="班级:"
                android:textColor="@color/text_3"
                android:textSize="@dimen/textSize_12" />

            <TextView
                android:id="@+id/itemStudentCards_gradeNameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/card_grade"
                android:layout_toRightOf="@+id/card_grade"
                android:text="6年级"
                android:textColor="@color/text_3"
                android:textSize="@dimen/textSize_12" />

        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>