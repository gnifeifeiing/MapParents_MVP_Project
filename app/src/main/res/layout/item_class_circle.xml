<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/btn_margin"
    android:paddingLeft="@dimen/btn_margin"
    android:paddingRight="@dimen/btn_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/classCircle_picHeadIv"
            android:layout_width="36dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/btn_margin"
            android:src="@mipmap/ease_default_avatar" />

        <TextView
            android:id="@+id/classCircle_nameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="26dp"
            android:layout_marginTop="10dp"
            android:text="sss"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize_18" />

        <TextView
            android:id="@+id/classCircle_teacherDesTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/classCircle_nameTv"
            android:layout_marginTop="8dp"
            android:text="语文老师"
            android:textColor="@color/text_9"
            android:textSize="@dimen/textSize_12" />

    </RelativeLayout>


    <TextView
        android:id="@+id/classCircle_contentTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical|left"
        android:lineSpacingMultiplier="1.2"
        android:text="表下降不粗"
        android:textColor="@color/text_6"
        android:textSize="12sp" />


    <com.zele.maipuxiaoyuan.common.views.MyGridview
        android:id="@+id/classCircle_gridView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:horizontalSpacing="5dp"
        android:numColumns="3"
        android:scrollbars="none"
        android:verticalSpacing="5dp" />

    <ImageView
        android:id="@+id/classCircle_singleIv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:layout_marginLeft="@dimen/btn_margin"
        android:layout_marginRight="@dimen/margin"
        android:adjustViewBounds="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/classCircle_dateTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_9"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/classCircle_timeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/classCircle_dateTv"
            android:textColor="@color/text_9"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/classCircle_delTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_toRightOf="@id/classCircle_dateTv"
            android:text="删除"
            android:textColor="#f4bb6e"
            android:textSize="@dimen/textSize_12"
            android:visibility="gone" />

        <TextView
            android:id="@+id/classCircle_reportTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@id/classCircle_delTv"
            android:text="举报"
            android:textColor="@color/text_9"
            android:textSize="@dimen/textSize_12" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/classCircle_dingIv"
                android:layout_width="@dimen/circle_ic"
                android:layout_height="@dimen/circle_ic"
                android:clickable="true"
                android:src="@mipmap/ic_zan_a" />

            <TextView
                android:id="@+id/classCircle_zanNumTv"
                android:layout_width="14dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:maxLines="1"
                android:maxWidth="20dp"
                android:textColor="@color/text_9"
                android:textSize="10sp" />

            <ImageView
                android:id="@+id/classCircle_replyIv"
                android:layout_width="@dimen/circle_ic"
                android:layout_height="@dimen/circle_ic"
                android:layout_marginLeft="4dp"
                android:src="@mipmap/ic_replay" />

            <TextView
                android:id="@+id/classCircle_replyNumTv"
                android:layout_width="14dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:maxLines="1"
                android:maxWidth="20dp"
                android:textColor="@color/text_9"
                android:textSize="10dp" />
        </LinearLayout>


    </RelativeLayout>

    <ImageView
        android:id="@+id/classCircle_sanjiaoIv"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/sanjiao" />

    <RelativeLayout
        android:id="@+id/classCircle_replyRl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/radis_rectangle_gray">

        <LinearLayout
            android:id="@+id/classCircle_zanLl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:gravity="center_vertical"
            android:paddingLeft="6dp"
            android:paddingRight="10dp"
            android:paddingTop="4dp">

            <ImageView
                android:layout_width="@dimen/circle_ic"
                android:layout_height="@dimen/circle_ic"
                android:src="@mipmap/ic_zan_a" />

            <TextView
                android:id="@+id/classCircle_commentNameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:textSize="@dimen/textSize_12" />

        </LinearLayout>

        <View
            android:id="@+id/classCircle_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/classCircle_zanLl"
            android:background="#e8e8e8" />

        <com.zele.maipuxiaoyuan.common.views.MyListview
            android:id="@+id/classCircle_listReply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/classCircle_divider"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="6dp"
            android:divider="@null"
            android:paddingLeft="6dp" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="11dp"
        android:background="@color/dividerLine" />

</LinearLayout>