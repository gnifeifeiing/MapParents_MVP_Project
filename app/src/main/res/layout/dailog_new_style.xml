<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:alpha="60"
    android:background="@color/transparent"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="262dp"
        android:layout_height="219dp"
        android:layout_centerInParent="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="176dp"
            android:layout_marginTop="43dp"
            android:background="@drawable/radis_rectangle_white_8"
            />
        <ImageView
            android:layout_width="223dp"
            android:layout_height="115dp"
            android:id="@+id/iv_background"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/ic_notrepeat_bg"
            />
        <TextView
            android:id="@+id/tv_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发布成功"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/iv_background"
            android:gravity="center"
            android:textSize="21dp"
            android:textColor="@color/text_9"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            />


        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageView
                android:layerType="software"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="1.2dp"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:src="@drawable/divider2"
                />
            <TextView
                android:id="@+id/tv_confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="确定"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:textColor="@color/text_4bc975"
                android:textSize="@dimen/textSize_15" />

        </LinearLayout>


    </RelativeLayout>


</RelativeLayout>
