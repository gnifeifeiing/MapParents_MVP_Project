<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:gravity="center"
    android:background="@drawable/radis_rectangle"
    android:paddingBottom="10dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="12dp"
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/choiseListItem_titleTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="切换学生"
            android:textSize="15sp"
            android:textColor="#717071" />
        <ImageView
            android:id="@+id/choiseListItem_closeIv"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginRight="12dp"
            android:src="@mipmap/ic_close_a" />
    </LinearLayout>
    <View
        android:layout_below="@id/ll"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/dividerLine" />

    <ListView
        android:layout_below="@id/ll"
        android:id="@+id/choiseListItem_listview"
        android:dividerHeight="0.6dp"
        android:listSelector="#b5b5b6"
        android:divider="@color/dividerLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</RelativeLayout>