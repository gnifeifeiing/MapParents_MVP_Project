<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:layout_marginTop="12dp"
    android:background="#f1f3f5"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/radis_rectangle_white"
        android:paddingBottom="18dp"
        android:paddingLeft="12dp"
        android:paddingRight="14dp"
        android:paddingTop="12dp">


        <ImageView
            android:id="@+id/itemEvaStar_avatarIv"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/default_avatar" />

        <TextView
            android:id="@+id/itemEvaStar_nameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@+id/itemEvaStar_avatarIv"
            android:text="chendd"
            android:textColor="@color/text_4bc975"
            android:textSize="@dimen/textSize_12" />

        <TextView
            android:id="@+id/itemEvaStar_starTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="5.5dp"
            android:layout_toRightOf="@id/itemEvaStar_nameTv"
            android:text="222"
            android:textColor="@color/text_4bc975"
            android:textSize="@dimen/textSize_10" />

        <TextView
            android:id="@+id/itemEvaStar_timeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/itemEvaStar_nameTv"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/itemEvaStar_avatarIv"
            android:text="2323232323"
            android:textColor="#979797"
            android:textSize="@dimen/textSize_10" />

        <TextView
            android:id="@+id/itemEvaStar_tagTv"
            android:layout_width="65dp"
            android:layout_height="17dp"
            android:layout_alignParentRight="true"
            android:background="@mipmap/ic_tag_bg"
            android:gravity="center"
            android:lines="1"
            android:paddingLeft="16dp"
            android:text="课外活动"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_10" />

        <TextView
            android:id="@+id/itemEvaStar_contentTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/itemEvaStar_avatarIv"
            android:layout_marginTop="10dp"
            android:lineSpacingMultiplier="1.5"
            android:textColor="@color/text_6"
            android:textSize="@dimen/textSize_10" />

        <com.zele.maipuxiaoyuan.common.views.MyGridview
            android:id="@+id/gridView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/itemEvaStar_contentTv"
            android:layout_marginTop="10dp"
            android:horizontalSpacing="5dp"
            android:listSelector="@color/transparent"
            android:numColumns="3"
            android:scrollbars="none"
            android:verticalSpacing="5dp" />
    </RelativeLayout>

</android.support.v7.widget.CardView>
